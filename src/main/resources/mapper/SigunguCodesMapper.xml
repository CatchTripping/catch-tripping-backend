<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bho.catchtrippingbackend.attractions.dao.SigunguCodesDao">

    <!-- Primary Key (areaCode와 sigunguCode)로 조회 -->
    <select id="findByAreaCodeAndSigunguCode" resultType="com.bho.catchtrippingbackend.attractions.dto.SigunguCodes">
        SELECT * FROM sigungu_codes
        WHERE area_code = #{areaCode} AND sigungu_code = #{sigunguCode}
    </select>

    <!-- 특정 지역 코드로 시군구 조회 -->
    <select id="findByAreaCode" parameterType="int" resultType="com.bho.catchtrippingbackend.attractions.dto.SigunguCodes">
        SELECT * FROM sigungu_codes WHERE area_code = #{areaCode}
    </select>

    <!-- 모든 시군구 코드 조회 -->
    <select id="findAll" resultType="com.bho.catchtrippingbackend.attractions.dto.SigunguCodes">
        SELECT * FROM sigungu_codes
    </select>

    <!-- 특정 시군구 이름으로 조회 (정확히 일치하는 경우) -->
    <select id="findBySigunguName" parameterType="string" resultType="com.bho.catchtrippingbackend.attractions.dto.SigunguCodes">
        SELECT * FROM sigungu_codes WHERE sigungu_name = #{sigunguName}
    </select>

    <!-- 특정 이름을 포함하는 시군구 조회 (부분 일치 검색) -->
    <select id="findBySigunguNameContaining" parameterType="string" resultType="com.bho.catchtrippingbackend.attractions.dto.SigunguCodes">
        SELECT * FROM sigungu_codes WHERE sigungu_name LIKE CONCAT('%', #{partialName}, '%')
    </select>

</mapper>
